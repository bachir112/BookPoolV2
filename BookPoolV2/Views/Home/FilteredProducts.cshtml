
@{
    ViewBag.Title = "FilteredProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="mainSortByFilter" style="background: white; height:50px;padding-top:5px;">
    <div class="row">
        <div class="col s12 m12 l12 noscroll" style="overflow:auto;">
            <div style="min-width: 800px;">
                <div class="card horizontal smallfilter">
                    <div class="card-stacked">
                        <div class="card-content" style="padding: 2px 10px;">
                            <p>Rating: 4.0+</p>
                        </div>
                    </div>
                </div>
                <div class="card horizontal smallfilter">
                    <div class="card-stacked">
                        <div class="card-content" style="padding: 2px 10px;">
                            <p>Academic</p>
                        </div>
                    </div>
                </div>
                <div class="card horizontal smallfilter">
                    <div class="card-stacked">
                        <div class="card-content" style="padding: 2px 10px;">
                            <p>Magazines</p>
                        </div>
                    </div>
                </div>
                <div class="card horizontal smallfilter">
                    <div class="card-stacked">
                        <div class="card-content" style="padding: 2px 10px;">
                            <p>News Papers</p>
                        </div>
                    </div>
                </div>
                <div class="card horizontal smallfilter">
                    <div class="card-stacked">
                        <div class="card-content" style="padding: 2px 10px;">
                            <p>Lebanese Writers</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col s12 m12 l12" style="overflow-x:auto; overflow-y:hidden;">
        <h5>FILTERED BY CATEGORY</h5>

        <div style="width:100px;height:160px;float:left;border: 1px solid var(--primaryRed); margin:15px;" class="card">
            <div style="height:100px;" class="card-image waves-effect waves-block waves-light">
                <img width="70" class="activator" src="https://png.pngtree.com/png-vector/20190214/ourmid/pngtree-engineering-icon-png-image_428266.jpg">
            </div>
            <div class="card-content" style="font-size:12px; padding:12px; text-align:center;">
                <span>
                    Engineering
                </span>
            </div>
            <a href="@Url.Action("Index","Home")">
                <i class="material-icons" style="position:absolute;top:0;right:0;color:var(--primaryGrey);z-index:1;padding:3px;">close</i>
            </a>
        </div>
    </div>
</div>

