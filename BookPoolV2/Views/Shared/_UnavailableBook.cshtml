@using BookPool.DataObjects.DTO

@model BookPoolResult


<div class="card" style="box-shadow:none; -webkit-box-shadow:none; opacity:0.8;">
    <div class="card-horizontal" style="overflow: hidden;">
        <div class="img-square-wrapper">
            @{
                if (Model.ImageURL == null)
                {
                    <img class="smallImage" src="@Url.Content("~/img/no_preview.jpg")" alt="@Model.BookName">
                }
                else
                {
                    <img class="smallImage" src="@Model.ImageURL" alt="@Model.BookName">
                }
            }
        </div>
        <div class="card-body">
            <div style="width:100%;">
                <div style="float:left;width: 100%;padding-right: 15px;">
                    <h5 class="card-title" style="margin-top:0;padding-top:0px;color: black;font-size: 16px;font-weight:bold;">
                        @Model.BookName
                    </h5>
                    @{
                        if (Model.Authors != null)
                        {
                            <h5 class="card-title" style="padding-top:0px;margin-top:0px;margin-bottom:0px;color: black;font-size: 12px;">
                                by @string.Join(",", Model.Authors)
                            </h5>
                        }
                    }
                    <p class="card-text" style="margin-bottom:6px;margin-top:6px;color:var(--primaryGrey);">
                        Price: Not Available
                    </p>
                    <p class="card-text" style="margin-bottom: 6px; margin-top: 6px; font-size: 12px; color: var(--secondaryOrange)">
                        No one has offered to sell this book
                    </p>
                    <p class="card-text" style="margin-bottom:6px;margin-top:6px; font-size:12px; color:var(--secondaryOrange)">
                        <button type="button" class="waves-effect waves-light btn-small modal-trigger findThisBookForMe red" data-GoogleBookID="@Model.GoogleID" data-target="search-for-my-book-modal">
                            <i class="material-icons left" style="margin-right: 0;">search</i>
                            Find it for me
                        </button>
                    </p>
                </div>
                <div style="float:right;position: absolute;right: 0;">
                    @{
                        string averageRating = Model.AverageRating.ToString();
                        string backgroundColor = "transparent";

                        if (Model.AverageRating == 0)
                        {
                            averageRating = "N/A";
                            backgroundColor = "grey";
                        }
                        else if (Model.AverageRating < 2)
                        {
                            backgroundColor = "yellow";
                        }
                        else if (Model.AverageRating < 3)
                        {
                            backgroundColor = "orange";
                        }
                        else if (Model.AverageRating < 4)
                        {
                            backgroundColor = "green";
                        }
                        else if (Model.AverageRating < 5)
                        {
                            backgroundColor = "forestgreen";
                        }

                        <span class="badge" style="color:white; background-color:@backgroundColor;">@averageRating</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
